<div class="modal-content add-product-modal">
    <div class="modal-header text-center">
        <div class="d-flex w-100">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-2">
                        <img src="{{ vich_uploader_asset(dto.wine, 'imageFile') }}" height="100px"/>
                    </div>
                    <div class="col-10">
                        <div class="card-wine_content-product_content d-flex flex-column justify-content-around align-items-center">
                            <span class="font-weight-bold" style="color: {{ dto.wine.profile.color }}">{{ dto.wine.vintageName }}</span>
                            <span>{{ dto.wine.year }}</span>
                            <span>{{ dto.wine.domain }}</span>
                            <span>{{ dto.wine.appellation }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body mx-3">
        {{ form_start(form, {'attr': {'class': 'addWineCart'}, 'action': path('add_wine_to_card', {'id': dto.wine.id})}) }}
        <table class="table product-table mb-0">
            <tbody>

            {% for element in form.elements %}
            <tr class="product-item">
                <td>
                    <div>
                        <span>{{ element.vars.data.capacity.type }} {{ element.vars.data.capacity.quantity }}L</span>
                    </div>
                </td>
                <td>{{ element.vars.data.capacity.unitPrice }} â‚¬</td>
                <td></td>
                <td>
                    <div class="md-form mb-0 mt-0">
                        {{ form_widget(element.quantity) }}
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        </table>
        <div class="col-12 d-flex justify-content-end">
            <button type="submit" class="btn-floating btn-danger update-cart mb-3">
                <img class="icon" src="{{ asset('build/images/cart.svg') }}" width="30"/>
            </button>
        </div>
        {{ form_end(form) }}
    </div>
</div>

{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ encore_entry_link_tags('home') }}
{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags('home') }}
{% endblock %}

{% block body %}
<div class="container-fluid pr-0 pl-0">
    <div id="carousel-slider-homepage" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            {% for index, slider in sliders %}
                {% if slider.link %}
                    <a href="{{ slider.link }}">
                {% endif %}
                <div class="carousel-item{% if index == 0 %} active{% endif %}">
                    <img class="d-block img-fluid" src="{{vich_uploader_asset(slider, 'imageFile')}}">
                </div>
                {% if slider.link %}
                    </a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
    <div class="mt-4 mb-4 p-0">
        <img class="img-fluid" src="{{ vich_uploader_asset(globalConf, 'imageHomepageFile') }}"/>
    </div>
</div>
{% endblock %}
